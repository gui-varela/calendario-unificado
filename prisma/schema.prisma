// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Usuario {
  id        String     @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  email     String     @unique
  username  String     @unique
  password  String
  perfil    Perfil     @relation(fields: [perfilId], references: [id])
  perfilId  String     @db.Uuid
  sessions  Session[]
  professor Professor?
  aluno     Aluno?
}

model Session {
  sessionId String  @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  token     String
  usuario   Usuario @relation(fields: [usuarioId], references: [id])
  usuarioId String  @db.Uuid
}

model Perfil {
  id      String    @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  codigo  String    @unique
  nome    String
  usuario Usuario[]
}

model Disciplina {
  id               String         @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  codigo           String         @unique
  nome             String
  usuarioCriador   Professor      @relation(fields: [usuarioCriadorId], references: [id])
  usuarioCriadorId String         @db.Uuid
  Prova            Prova[]
  CursoAfetado     CursoAfetado[]
  Aluno            Aluno[]
}

model Aluno {
  id          String       @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  usuario     Usuario      @relation(fields: [usuarioId], references: [id])
  usuarioId   String       @unique @db.Uuid
  disciplinas Disciplina[]
}

model Professor {
  id          String       @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  usuario     Usuario      @relation(fields: [usuarioId], references: [id])
  usuarioId   String       @unique @db.Uuid
  disciplinas Disciplina[]
}

model Prova {
  id           String     @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  nome         String
  data         DateTime
  disciplina   Disciplina @relation(fields: [disciplinaId], references: [id])
  disciplinaId String     @db.Uuid
}

model Curso {
  id           String         @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  nome         String
  cursoAfetado CursoAfetado[]
}

model CursoAfetado {
  id           String     @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  curso        Curso      @relation(fields: [cursoId], references: [id])
  cursoId      String     @unique @db.Uuid
  disciplina   Disciplina @relation(fields: [disciplinaId], references: [id])
  disciplinaId String     @unique @db.Uuid
}
